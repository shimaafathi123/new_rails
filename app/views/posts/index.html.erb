<h1>All Posts</h1>
<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, post_url(post) %> (  
          <%= link_to "Edit", edit_post_path(post) %> |
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
        )
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts found.</p>
<% end %>
