<% @posts.each do |post| %>
  <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
    <h1 style="font-size: 24px; margin-bottom: 10px;"><%= post.title %></h1>
    <div style="font-size: 16px; margin-bottom: 10px;"><%= post.content %></div>
    <div>
      <%= link_to "Edit", edit_post_path(post), style: "margin-right: 10px;" %>
      <%= button_to "Delete", delete_post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, style: "margin-right: 10px;" %>
      <%= link_to "Show", post_path(post) %>
    </div>
  </div>
<% end %>
