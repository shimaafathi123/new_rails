<%= form_for @post, url: posts_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Post", class: 'btn btn-primary' %>
    </div>
  <% end %>
  